<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- order matters here, if you change one you must change the other -->
    <string-array name="movie_filter_sortby_labels">
        <item>@string/filter_sortby_most_popular_label</item>
        <item>@string/filter_sortby_highest_rated_label</item>
        <item>@string/filter_sortby_highest_revenue_label</item>
        <item>@string/filter_sortby_lowest_revenue_label</item>
    </string-array>
    <string-array name="movie_filter_sortby_values">
        <item>@string/default_movie_filter_sortby_value</item>
        <item>vote_average.desc</item>
        <item>revenue.desc</item>
        <item>revenue.asc</item>
    </string-array>


    <!-- order also matters here, these are the sortby labels used to sort NON-favorites -->
    <string-array name="favorites_sortby_labels">
        <item>@string/favorites_sortby_highest_rated_label</item>
        <item>@string/favorites_sortby_lowest_rated_label</item>
        <item>@string/favorites_sortby_highest_revenue_label</item>
        <item>@string/favorites_sortby_lowest_revenue_label</item>
        <item>@string/favorites_sortby_newest_year_label</item>
        <item>@string/favorites_sortby_oldest_year_label</item>
    </string-array>
    <!-- the values array is used in FragmentMovieGrid to sort the favorites records in the db -->
    <string-array name="favorites_sortby_values">
        <item>@string/default_favorites_sortby_value</item>
        <item>vote_average ASC</item>
        <item>revenue DESC</item>
        <item>revenue ASC</item>
        <item>release_date DESC</item>
        <item>release_date ASC</item>
    </string-array>

</resources>