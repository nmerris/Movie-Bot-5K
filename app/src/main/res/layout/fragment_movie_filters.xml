<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/spinnerDropDownItemStyle"
        android:text="@string/spinner_sortby_label"/>

    <!-- It turns out that Android does NOT preserve the Spinner drop down view when the device
    is rotated, but Android DOES preserve the dialog view, so why fight it?  I went with dialog mode -->
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/fragment_movie_filter_spinner_sortby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/spinnerDropDownItemStyle"
        android:text="@string/spinner_year_label"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/fragment_movie_filter_spinner_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>






</LinearLayout>


